-content_for :title do "#{@project.name}" end

#project
	.page-header
		%h1 
			.pull-right
				= render "vote"
			= hovercard @user
			\/
			= link_to @project.name, user_project_path(@user, @project)
	.row
		.span12
			%p
			= link_to 'Edit', edit_user_project_path(@user, @project)
			%p
				%b Name:
				= @project.name
			= image_tag(@project.avatar.image.small.url)
			%p
				%b Description:
				= @project.description
			%p
				%b Tags:
				= @project.tag_list
			%p
				%b State:
				= @project.state
