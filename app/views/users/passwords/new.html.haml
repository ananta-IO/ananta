.page-header
  %h1 Forgot your password?
.row
  .span10
    = twitter_bootstrap_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => "form-stacked" }) do |f|
      = f.inputs do
        = f.email_field :email
      = f.actions do
        = f.submit "Send me reset password instructions"
  .span4
    = render :partial => "users/shared/links"