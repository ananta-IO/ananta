.page-header
  %h1 Change your password?
.row
  .span10
    = twitter_bootstrap_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class => "form-stacked" }) do |f|
      = f.inputs do
        = f.hidden_field :reset_password_token

        = f.password_field :password, "New password"

        = f.password_field :password_confirmation, "Confirm new password"
      = f.actions do
        = f.submit "Change my password"
  .span4
    = render :partial => "devise/shared/links"