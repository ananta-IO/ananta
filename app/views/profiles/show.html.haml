-content_for :title do "#{@profile.user.username.possessive} profile" end

.page-header
	%h1 
		= @profile.user.username
		-if can? :edit, @profile
			.display-inline-block
				%p.m0 
					= link_to 'Edit Profile', edit_profile_path(@profile)
.row
	.span4
		.row
			.span4
				= image_tag(@profile.avatar.image.medium.url, :class => 'circle')
		%br
		.row
			.span1
				%h4 
					%i.icon-tags
					Bio
			.span3
				%p
					= @profile.bio_tag_list
					&nbsp;
		.row
			.span1
				%h4 
					%i.icon-tags
					Skills
			.span3
				%p
					= @profile.skill_list
					&nbsp;
		.row
			.span1
				%h4 
					%i.icon-tags
					Needs
			.span3
				%p
					= @profile.need_list
					&nbsp;
	.span8
		.sub-header 
			%h2 
				Projects
				-if can? :edit, @profile
					.pull-right 
						= link_to "New Project", new_user_project_path(@profile.user)
		%table.table
			- @profile.user.projects.each do |project|
				%tr
					%td
						.pull-left
							= image_tag(project.avatar.image.small.url)
						%h3
							= link_to project.name, [@profile.user, project]
							.pull-right
								= project.votes_for
								%i.icon-heart
						%p
							= project.state.titleize