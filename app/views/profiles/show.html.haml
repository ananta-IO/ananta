-content_for :title do "#{@profile.name.possessive} profile" end

.page-header
	%h1 
		= @profile.name
.row
	.span6
		.sub-header 
			%h2.inline 
				Profile
			= link_to 'Edit', edit_profile_path(@profile)
		%h3 Bio Tags
		%p
			= @profile.bio_tag_list
		%h3 Skills
		%p
			= @profile.skill_list
		%h3 Needs
		%p
			= @profile.need_list
	.span6
		.sub-header 
			%h2 
				Projects
				.pull-right 
					= link_to "New", new_user_project_path(@profile.user)
		%table.table
			- @profile.user.projects.each do |project|
				%tr
					%td
						%h3
							= link_to project.name, [@profile.user, project]