-content_for :title do "#{@profile.name.possessive} profile" end

.page-header
	%h1 
		= @profile.name
	%p.pull-right
		= link_to 'Edit', edit_profile_path(@profile)
.row
	.span6
		%h3 Bio Tags
		%p
			= @profile.bio_tag_list
		%h3 Skills
		%p
			= @profile.skill_list
		%h3 Needs
		%p
			= @profile.need_list
	.span6
		%h3 Projects
		- @profile.user.projects.each do |project|
			%h3
				= link_to project.name, user_project_path(@profile.user, project)