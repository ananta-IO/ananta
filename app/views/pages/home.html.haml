-content_for :title do "Ananta IO Â· A Place for Projects" end

.container-fluid
	.content
		#home
		%br
		%br
		%br
		.row-fluid
			.span12.center
				.brand{style: "font-size: 60px; font-weight: 200;"}
					ananta I/O
		%br
		.row-fluid
			.span12.center
				%h1.tag-line{style: "color: #ccc;"}
					Infinite Input&nbsp;
					%i.icon-arrow-right &nbsp;
					Infinite Output
		%br
.container-fluid{style: "background-color: #eee;"}
	.content
		%br
		.row-fluid
			.span4
				%h2
					%i.icon-play
					What
				%p{style: 'font-size: 16px;'}
					Ananta IO is a project database. It's a tool for doers. We make it easy for you to: <em>share what you're working on, get feedback, build teams, achieve your goals, and gloat.</em> 
			.span4
				%h2
					%i.icon-road
					Why
				%p{style: 'font-size: 16px;'}
					To organize the world's people. We want to connect like-minded people around the projects that excite them. We believe that people and projects, big and small, benefit from the support of their neighbors. 
			.span4
				%h2
					%i.icon-lemon
					Who
				%p{style: 'font-size: 16px;'}
					We are people who love building tools that inspire collaboration. Ananta IO is open source and we encourage you to 
					= link_to 'join us', "/ananta/ananta"
					as we develop new and better tools. 
		%br
.container-fluid
	.content
		%br
		.row-fluid
			.span12.center
				%h2{style: "color: #ccc;"}
					Get your ideas out of your head and into the world faster than ever before.
				%h2{style: "color: #ccc;"}
					Complete more project.
		%br
		.row-fluid
			.span12.center
				%a.login.btn.btn-large.btn-success{style: "font-weight: 800;"}
					Do It
		%br
		%br

.container-fluid
	.content
		%br
		.row-fluid
			.span12
				%h2
					Explore Projects
		.row-fluid
			.span12
				%hr
		.row-fluid
			- @projects.each do |project|
				.span2
					= link_to user_projects_path([project.user, project]) do image_tag project.avatar.image.medium, rel: 'tooltip', 'data-original-title' => "#{project.name}<br/>by<br/>#{project.user.username}" end



-#
	=content_for :javascripts do
		:javascript
			$(function() {
				// Add project_flow to view
				Ananta.App.projectFlowRouter = new Ananta.Routers.ProjectFlowRouter({ 'currentUser' : #{render(partial: "users/base", formats: [:json], locals: { object: current_user } )} });
				Backbone.history.start();
			});

	.container-fluid
		.content
			#home
				#project_flow
