-# http://paulirish.com/2008/conditional-stylesheets-vs-css-hacks-answer-neither
-ie_html class: "no-js", lang: "en" do
	%head
		= render "head"
	
	%body{ class: "#{ controller.controller_name }" }
		#pg-scrl.scrl
			= render "facebook"

			#wrapper
				%header#header
					= render "header"

				#main{ role: "main" }
					.container
						.content
							= render "flashes"
							#yield
								= yield

				#layout_footer      
			%footer#footer
				= render "footer"




		-# Javascript at the bottom for fast page loading
		= render "javascripts"