.navbar
	.navbar-inner
		.container	
			-# Left
			%a.brand{:href => "/"} ananta IO
			-# Right
			.user-nav
				%a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
					%span.icon-bar
					%span.icon-bar
					%span.icon-bar
				.nav-collapse
					-if current_user
						%ul.nav.pull-right
							%li
								= link_to "logout", "/logout"

					-else
						%ul.nav.pull-right
							%li
								= link_to "login", "/login"
			-# Center
			%ul.nav.center
				%li
					= link_to "?", "#"