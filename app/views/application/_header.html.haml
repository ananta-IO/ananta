.navbar
	.navbar-inner
		.container	
			-# Left
			%a.brand{:href => "/"} ananta IO
			-# Right
			.user-nav
				%a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
					%span.icon-bar
					%span.icon-bar
					%span.icon-bar
				.nav-collapse
					%ul.nav.pull-right
						-if current_user
							%li.dropdown
								%a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
									%i.icon-cog
									%b.caret
								%ul.dropdown-menu
									%li
										= link_to "#{current_user.username}", current_user.profile
									%li
										= link_to "logout", "/logout"
						-else
							%li
								= link_to "login", "/login"
			-# Center
			%ul.nav.center
				%li
					= link_to "?", "#"