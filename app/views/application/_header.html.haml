=content_for :javascripts do
	:javascript
		$(function() {
			// Add marq to view
			Ananta.router = new Ananta.Routers.MarqRouter({
				q_controller: "#{params[:controller]}",
				q_action: "#{params[:action]}",
				q_sid: "#{params[:id]}"
			});
			// Backbone.history.start();
		});
		// Open and close marq
		$('#marq_toggle a').click(function(e) {
			$('#marq_toggle a').toggleClass('active');
			$('#marq').slideToggle('slow');
			e.preventDefault();
			e.stopPropagation();
		});

-# Marq slide down container
-# Starts as display:none
#marq

-# Top Nav
.navbar
	.navbar-inner
		.container  
			-# Left
			- if !current_user and request.path == '/'
				%a.brand{:href => "/"} 
					ananta IO
			- else
				%a.brand{:href => "/"} 
					ananta IO
					%i.icon-home
			-# Right
			.user-nav
				%a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
					%span.icon-bar
					%span.icon-bar
					%span.icon-bar
				.nav-collapse
					%ul.nav.pull-right
						-if current_user
							%li
								= link_to current_user.profile, rel: :tooltip, 'data-placement' => 'bottom', 'data-delay' => 300, 'data-original-title' => raw( "Me<br/><img src='#{current_user.profile.avatar.image.small.url}' alt='#{current_user.username}' width=32 height=32 />" ) do
									%i.icon-user
							%li.dropdown
								%a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
									%i.icon-chevron-down
								%ul.dropdown-menu
									%li.nav-header
										= current_user.username.possessive
									%li
										= link_to "/users/edit" do
											%i.icon-cogs
											settings
									%li.divider
									%li
										= link_to "/logout" do
											%i.icon-signout
											logout
						-else
							%li
								%a.login
									%i.icon-signin
							%li.dropdown
								%a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
									%i.icon-signin
								%ul.dropdown-menu
									= form_for(User.new, :url => user_session_path) do |f|
										%li.nav-header
											.pull-right
												= link_to '#', onclick: "fbLogin()", :class => 'fb-login', rel: :tooltip, 'data-placement' => 'left', 'data-original-title' => 'login with facebook' do
													%i.icon-facebook-sign
											Login
										%li.nav-header
											= f.text_field :login, class: 'span2', placeholder: 'username or email', autofocus: true
										%li.nav-header
											= f.password_field :password, class: 'span2', placeholder: 'password'
										%li.center.right
											= f.submit :login, class: 'btn btn-info'
									%li.divider
									%li
										= link_to "Sign Up", "users/sign_up"
									%li
										= link_to "Forgot Password", "users/password/new"
			-# Center
			%ul.nav.center
				%li#marq_toggle
					= link_to "?", "#"